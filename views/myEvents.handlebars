<html>
<head>
    <title>DropBy</title>
    <link href="css/DropByCSS.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
</head>
<body>
    <meta name="viewport" content="width=device-width, initial-scale=1">
<div id="one">

    <script src="https://code.jquery.com/jquery.js"></script>
    <script src = "js/mapPage.js"></script>

    <div class="top">
    <a href="create">
        <i class="far fa-plus-square fa-3x"></i>
    </a>

    <button class="openbtn" >☰</button>
    <div id="mySidepanel" class="sidepanel">
      <a class="closebtn" >×</a>
      <a href="home">Home Page</a>
      <a href="list">Events List</a>
      <a href="map">View Map</a>
      <a href="create">Create Event</a>
      <a href="myEvents">Your Events</a>
    </div>
    
    <header><h2> My Events </h2></header>

    </div>

    <div class="middle">

    <select>
    <div id="myBtnContainer">
    <option><button class="btn active" onclick="filterSelection('all')"> All Events</button></option>
    <option><button class="btn" onclick="filterSelection('food')"> Food</button></option>
    <option><button class="btn" onclick="filterSelection('study')"> Study</button></option>
    <option><button class="btn" onclick="filterSelection('show')"> Show</button></option>
    <option><button class="btn" onclick="filterSelection('guestSpeaker')"> Guest Speaker</button></option>
    </div>
    </select>

    <a href="myEvents">
        <i class="fas fa-sync-alt"></i>
    </a>

    </div>
</div>

    {{# each data}}
    <div class="container">
        <div class="eventText">
        <strong>{{this.eventTitle}}</strong><br>
        Location: {{this.location}}<br>
        Time: {{this.time}}<br>
        Date: {{this.date}}<br>
        Price: {{this.price}}<br>
        Description: {{this.description}}
        </div>
    </div>
    <br>
    {{/ each}}

</body>
</html>
